{
  "name": "Node.js & TypeScript",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "anthropic.claude-code",
        "redhat.vscode-yaml",
        "biomejs.biome",
        "hoovercj.vscode-power-mode"
      ]
    }
  },
  "features": {
    "ghcr.io/devcontainers/features/common-utils:2": {},
    "ghcr.io/devcontainers/features/github-cli:1": {},
    "ghcr.io/devcontainers/features/node:1": {}
  },
  "mounts": [
    "source=node_modules_cache,target=${containerWorkspaceFolder}/node_modules,type=volume",
    "source=next_cache,target=${containerWorkspaceFolder}/.next,type=volume",
    "source=pnpm_cache,target=/home/node/.local/share/pnpm,type=volume"
  ],
  "remoteEnv": {
    "NEXT_TELEMETRY_DISABLED": "1"
  },
  "postCreateCommand": "curl -fsSL https://claude.ai/install.sh | bash"
}
